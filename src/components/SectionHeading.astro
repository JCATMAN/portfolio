---
interface Props {
  title: string;
  subtitle?: string;
  alignment?: 'left' | 'center';
}

const { title, subtitle, alignment = 'center' } = Astro.props;
const textAlignment = alignment === 'center' ? 'text-center' : 'text-left';
---

<div class={`mb-16 ${textAlignment}`} data-aos="fade-up">
  <h2 class="section-title relative inline-block">
    {title}
    <span class="absolute -bottom-3 left-0 w-1/3 h-1 bg-primary-500"></span>
  </h2>
  {subtitle && <p class="section-subtitle mx-auto">{subtitle}</p>}
</div>